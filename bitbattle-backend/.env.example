# BitBattle Backend Environment Variables
# Copy this to .env and fill in values

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=4000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgres://user:password@localhost:5432/bitbattle

# Connection pool settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT_SECS=30

# ============================================
# Google OAuth (get from https://console.cloud.google.com/)
# ============================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/auth/callback

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Use a secure random secret (at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secure-random-secret-at-least-32-characters
ACCESS_TOKEN_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=7

# ============================================
# Frontend/CORS Configuration
# ============================================
FRONTEND_URL=https://yourdomain.com

# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Logging Configuration
# ============================================
# Log level: trace, debug, info, warn, error
LOG_LEVEL=info

# Set to true for JSON logging (production/log aggregation)
JSON_LOGGING=false

# Alternative: use RUST_LOG for fine-grained control
# RUST_LOG=bitbattle_backend=debug,tower_http=debug
